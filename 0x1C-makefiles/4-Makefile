CC = gcc
SRC = main.c school.c
OBJ = ${SRC:.c=.o}
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: clean oclean fclean re

all: ${OBJ}
	${CC} ${CFLAGS} ${OBJ} -o ${NAME}

clean:
	${RM} -rf *~ ${NAME}

oclean:
	${RM} -rf *.o

fclean:
	${RM} ${NAME}
	${RM} *~
	${RM} *.o

re:
	oclean all
